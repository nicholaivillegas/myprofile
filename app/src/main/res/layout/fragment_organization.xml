                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_assignment_black_18dp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_assignment_black_18dp"
                        android:text="Lead Guitarist" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_date_range_black_18dp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_date_range_black_18dp"
                        android:text="September 2013 - Present" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
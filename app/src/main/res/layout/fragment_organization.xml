                        android:layout_marginTop="1dp"
                        android:drawableLeft="@drawable/ic_people_black_18dp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_people_black_18dp"
                        android:text="Junior Information Technology Society"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_assignment_black_18dp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_assignment_black_18dp"

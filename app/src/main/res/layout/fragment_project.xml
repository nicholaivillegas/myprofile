<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99ffffff"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingEnd="25dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingStart="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:drawableLeft="@drawable/ic_work_black_18dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_work_black_18dp"
                android:text="Company"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:drawableLeft="@drawable/ic_label_black_18dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_label_black_18dp"
                android:text="E.Care Assessment Tool"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:drawableLeft="@drawable/ic_date_range_black_18dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_date_range_black_18dp"
                android:text="Feb 2015 - May 2015"
                android:textSize="18sp" />

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="1dp"-->
                <!--android:drawableLeft="@drawable/ic_person_black_18dp"-->
                <!--android:drawablePadding="10dp"-->
                <!--android:drawableStart="@drawable/ic_person_black_18dp"-->
                <!--android:text="Personal"-->
                <!--android:textSize="18sp"-->
                <!--android:textStyle="bold" />-->

        </LinearLayout>

    </ScrollView>

</LinearLayout>